<Window x:Class="RomInstaller.UI.ResolveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RomInstaller UI"
        Height="220" Width="520"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"  />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"   />
        </Grid.ColumnDefinitions>

        <!-- ROM -->
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,4" VerticalAlignment="Center" Text="ROM:"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,0,0,4" TextTrimming="CharacterEllipsis"
                   Text="{Binding SourcePath}"/>

        <!-- Console -->
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,4" VerticalAlignment="Center" Text="Console:"/>
        <ComboBox  Grid.Row="1" Grid.Column="1" Margin="0,0,0,4"
                   ItemsSource="{Binding ConsoleOptions}"
                   SelectedItem="{Binding SelectedConsole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Emulator -->
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,4" VerticalAlignment="Top" Text="Emulator:"/>
        <ComboBox  Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"
                   ItemsSource="{Binding EmulatorOptions}"
                   SelectedItem="{Binding SelectedEmulator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   DisplayMemberPath="Name"
                   IsSynchronizedWithCurrentItem="True"/>

        <!-- Install -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Install" Padding="16,6" MinWidth="100"
                    IsDefault="True"
                    Command="{Binding InstallCommand}"/>
        </StackPanel>
    </Grid>
</Window>
