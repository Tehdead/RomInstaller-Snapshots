    "seedGeneratedBy": "Aurion 2025.10.v1",
    "schema": 1,

    // ------------------------------------------------------------
    // Root folder where all consoles store their ROMs, BIOS, saves, etc.
    // Leave blank to default to %USERPROFILE%/Emulation.
    // ------------------------------------------------------------
    "emulationRoot": "",

    // ------------------------------------------------------------
    // Default emulator per console
    // (used when planner can't auto-detect or user skips Resolve UI)
    // ------------------------------------------------------------
    "defaultEmulatorPerConsole": {
        "snes": "snes9x",
        "ps2": "pcsx2",
        "gamecube": "dolphin",
        "wii": "dolphin",
        "gba": "retroarch",
        "nes": "retroarch",
        "psx": "retroarch",
        "ps1": "duckstation"
    },

    // ------------------------------------------------------------
    // File extensions registered for Explorer context menu
    // (applies to Windows shell integration)
    // ------------------------------------------------------------
    "registeredExtensions": [
        ".sfc",
        ".smc",
        ".gba",
        ".iso",
        ".cue"
    ],

    // ------------------------------------------------------------
    // Optional folder for desktop shortcuts created by the CLI
    // ------------------------------------------------------------
    "shortcutsRoot": "%USERPROFILE%/Desktop/RomShortcuts",

    // Automatically create a desktop shortcut after each install (default true)
    "autoCreateShortcut": true,

    // ------------------------------------------------------------
    // Logging configuration
    // ------------------------------------------------------------
    "logging": {
        "level": "info", // info | debug | warn | error
        "maxFiles": 10, // maximum number of rolling logs
        "maxFileSizeKB": 512 // size limit per log file before rotation
    }
}
